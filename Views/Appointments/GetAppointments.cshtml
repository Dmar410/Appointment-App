@{
    ViewData["Title"] = "Appointments List";
}

<h2>Your Appointments</h2>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Id</td>
                <td>@appointment.Name</td>
                <td>@appointment.Date</td>
                <td>@appointment.Time</td>
                <td>@appointment.Email</td>
            </tr>
        }
    </tbody>
</table>
